<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#063970"
    tools:context=".MainActivity">

    <!-- We give the text an id -->

    <TextView

        android:id="@+id/text"
        android:layout_width="279dp"
        android:layout_height="23dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Input 1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/input1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.725" />

    <TextView

        android:id="@+id/text2"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Input 2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/input2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885" />

    <TextView

        android:id="@+id/text4"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

    <TextView

        android:id="@+id/text3"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Simple Calculator Text"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/button"
        android:layout_width="264dp"
        android:layout_height="85dp"
        android:layout_marginBottom="152dp"
        android:text="Press me"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="264dp"
        android:layout_height="85dp"
        android:layout_marginBottom="48dp"
        android:text="Clear"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="257dp"
        android:layout_height="54dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/text4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="input a number" />

    <EditText
        android:id="@+id/result"
        android:layout_width="257dp"
        android:layout_height="54dp"
        android:layout_marginBottom="32dp"
        android:editable="false"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        android:text="Result"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input1"
        android:layout_width="257dp"
        android:layout_height="54dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="input a number" />

</androidx.constraintlayout.widget.ConstraintLayout>